/* WorkerMixin LoadingOverlay widget styles */

LoadingOverlay {
    align: center middle;
    display: none;
    background: $surface;
    width: 100%;
    height: 100%;
}

LoadingOverlay.visible {
    display: block;
}

#loading-row {
    align: center middle;
    spacing: 1;
}

#loading-text {
    color: $accent;
    text-style: italic;
}

#loading-text.error-text {
    color: $error;
}
